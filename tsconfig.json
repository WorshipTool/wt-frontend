{
	"compilerOptions": {
		"target": "es2017",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"allowArbitraryExtensions": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"allowSyntheticDefaultImports": true,
		"paths": {
			"@/*": ["./src/*"],
			"@/components/*": ["./src/components/*"],
			"@/common/*": ["./src/common/*"],
			"@/assets/*": ["./src/assets/*"],
			"@/hooks/*": ["./src/hooks/*"],
			"@/ui/*": ["./src/common/ui/*"],
			"@/tech/*": ["./src/tech/*"]
		},
		"forceConsistentCasingInFileNames": true
	},
	"include": [
		"next-env.d.ts",
		"global.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		"src/routes/__tests__/changeUrlToSubdomains.test.jsx",
		"content/*.json"
	],
	"exclude": ["node_modules"]
}
